@*Delete customer*@
@model Customer

@{
    ViewData["Title"] = "Are you sure to delete ?";
}
<form method="post" asp-action="DeleteCompleted" style="color:antiquewhite;font-weight:bold;">

    <div>Supprimer le client suivant ?</div>
    <div>@Model.FirstName</div>
    <div>@Model.LastName</div>
    <div>@Model.BirthDate</div>

    <button type="submit" style="background-color:yellowgreen; color:darkred;">Supprimer</button>
</form>